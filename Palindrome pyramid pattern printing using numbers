Palindrome half pyramid pattern using numbers
-------------------------------------------------------------------------------------------------------------------------------------------
#include<stdio.h>
int main()
{
    int rows;
    printf("enter no of rows:");
    scanf("%d",&rows);
    for(int i=1;i<=rows;i++)
    {
        for(int j=1;j<=i;j++)
        {
            printf("%d ",j);
        }
        for(int j=i-1;j>=1;j--)
        {
            printf("%d ",j);
        }
        printf("\n");
    }
}

Palindrome half pyramid pattern using alphabets
-------------------------------------------------------------------------------------------------------------------------------------------
#include<stdio.h>
int main()
{
    int rows;
    printf("enter no of rows:");
    scanf("%d",&rows);
    for(int i=65;i<65+rows;i++)
    {
        for(int j=65;j<=i;j++)
        {
            printf("%c ",j);
        }
        for(int j=i-1;j>=65;j--)
        {
            printf("%c ",j);
        }
        printf("\n");
    }
}
Palindrome pyramid pattern using numbers
-----------------------------------------------------------------------------------------------------------------------------------------
#include<stdio.h>
int main()
{
    int rows;
    printf("enter no of rows:");
    scanf("%d",&rows);
    for(int i=1;i<=rows;i++)
    {   
        for(int space=rows-i;space>=1;space--)
        {
            printf("  ");
        }
        for(int j=1;j<=i;j++)
        {
            printf("%d ",j);
        }
        for(int j=i-1;j>=1;j--)
        {
            printf("%d ",j);
        }
        printf("\n");
    }
}
Palindrome pyramid pattern using numbers and stars
----------------------------------------------------------------------------------------------------------------------------------------
#include<stdio.h>
int main()
{
    int rows;
    printf("enter row:\n");
    scanf("%d",&rows);
    for(int i=1;i<=rows;i++)
    {
        for(int j=9-i;j>=1;j--)
        {
            printf("*");
        }
        for(int j=1;j<=i;j++)
        {
            printf("%d",i);
            if(i!=j)
            printf("*");
        }
        for(int j=9-i;j>=1;j--)
        {
            printf("*");
        }
        printf("\n");
    }
}
Solid Diamond pattern printing using stars
--------------------------------------------------------------------------------------------------------------------------------------------
#include<stdio.h>
int main()
{
    int rows;
    printf("enter rows:\n");
    scanf("%d",&rows);
  int  k=2*(rows-1)-1;
    for(int i=1;i<=rows;i++)
    {
        for(int space=rows-i;space>0;space--)
        {
            printf("  ");
        }
        for(int j=1;j<=2*i-1;j++)
        {
            printf("* ");
        }printf("\n");
    }
      for(int i=1;i<=rows-1;i++)
      {
         for(int space=1;space<=i;space++)
        {
            printf("  ");
        }
        for(int j=1;j<=k;j++)
        {
            printf("* ");
        }
        k=k-2;
        printf("\n");
      }
    
}
Program to print Floyd’s triangle in C
------------------------------------------------------------------------------------------------------------------------------------------
#include<stdio.h>
int main()
{
    int rows,num=1;
    printf("enter rows;\n");
    scanf("%d",&rows);
    for(int i=1;i<=rows;i++)
    {
        for(int j=1;j<=i;j++)
        {
            printf("%d ",num);
            num++;
        }
        printf("\n");
    }
}
Program to print Pascal’s triangle
---------------------------------------------------------------------------------------------------------------------------------------------
#include<stdio.h>
/*pascal triangle*/
int main()
{
    int rows,coef=1,space;
    printf("enter rows;\n");
    scanf("%d",&rows);
    for(int i=0;i<rows;i++)
    {   //print space
        for(space=rows-i-1;space>0;space--)
        {
            printf(" ");
        }
        //print numbers
        for(int j=0;j<=i;j++)
        {   
            if(j==0 || i==0)
            coef=1;
            else
            coef=coef*(i-j+1)/j;
            
            
            printf("%3d",coef);
        }
        printf("\n");
    }
}



