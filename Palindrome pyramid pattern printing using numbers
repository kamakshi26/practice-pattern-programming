Palindrome half pyramid pattern using numbers
-------------------------------------------------------------------------------------------------------------------------------------------
#include<stdio.h>
int main()
{
    int rows;
    printf("enter no of rows:");
    scanf("%d",&rows);
    for(int i=1;i<=rows;i++)
    {
        for(int j=1;j<=i;j++)
        {
            printf("%d ",j);
        }
        for(int j=i-1;j>=1;j--)
        {
            printf("%d ",j);
        }
        printf("\n");
    }
}

Palindrome half pyramid pattern using alphabets
-------------------------------------------------------------------------------------------------------------------------------------------
#include<stdio.h>
int main()
{
    int rows;
    printf("enter no of rows:");
    scanf("%d",&rows);
    for(int i=65;i<65+rows;i++)
    {
        for(int j=65;j<=i;j++)
        {
            printf("%c ",j);
        }
        for(int j=i-1;j>=65;j--)
        {
            printf("%c ",j);
        }
        printf("\n");
    }
}
Palindrome pyramid pattern using numbers
-----------------------------------------------------------------------------------------------------------------------------------------
#include<stdio.h>
int main()
{
    int rows;
    printf("enter no of rows:");
    scanf("%d",&rows);
    for(int i=1;i<=rows;i++)
    {   
        for(int space=rows-i;space>=1;space--)
        {
            printf("  ");
        }
        for(int j=1;j<=i;j++)
        {
            printf("%d ",j);
        }
        for(int j=i-1;j>=1;j--)
        {
            printf("%d ",j);
        }
        printf("\n");
    }
}
Palindrome pyramid pattern using numbers and stars
----------------------------------------------------------------------------------------------------------------------------------------
#include<stdio.h>
int main()
{
    int rows;
    printf("enter row:\n");
    scanf("%d",&rows);
    for(int i=1;i<=rows;i++)
    {
        for(int j=9-i;j>=1;j--)
        {
            printf("*");
        }
        for(int j=1;j<=i;j++)
        {
            printf("%d",i);
            if(i!=j)
            printf("*");
        }
        for(int j=9-i;j>=1;j--)
        {
            printf("*");
        }
        printf("\n");
    }
}


