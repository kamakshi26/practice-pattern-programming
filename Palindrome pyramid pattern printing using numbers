Palindrome half pyramid pattern using numbers
-------------------------------------------------------------------------------------------------------------------------------------------
#include<stdio.h>
int main()
{
    int rows;
    printf("enter no of rows:");
    scanf("%d",&rows);
    for(int i=1;i<=rows;i++)
    {
        for(int j=1;j<=i;j++)
        {
            printf("%d ",j);
        }
        for(int j=i-1;j>=1;j--)
        {
            printf("%d ",j);
        }
        printf("\n");
    }
}

Palindrome half pyramid pattern using alphabets
-------------------------------------------------------------------------------------------------------------------------------------------
#include<stdio.h>
int main()
{
    int rows;
    printf("enter no of rows:");
    scanf("%d",&rows);
    for(int i=65;i<65+rows;i++)
    {
        for(int j=65;j<=i;j++)
        {
            printf("%c ",j);
        }
        for(int j=i-1;j>=65;j--)
        {
            printf("%c ",j);
        }
        printf("\n");
    }
}

